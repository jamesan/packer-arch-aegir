{
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_additions_mode": "disable",
            "guest_os_type": "ArchLinux_64",
            "http_directory": ".",
            "iso_url": "https://mirrors.kernel.org/archlinux/iso/2014.02.01/archlinux-2014.02.01-dual.iso",
            "iso_checksum": "eb4c971c71b505b5c1be25f1710e6579987fda3b",
            "iso_checksum_type": "sha1",
            "ssh_username": "root",
            "ssh_wait_timeout": "30m",
            "shutdown_command": "systemctl poweroff",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait5>",
                "export HTTPHOST=http://{{.HTTPIP}}:{{.HTTPPort}}/<enter><wait>",
                "export SCRIPT=00-init<enter><wait>",
                "curl -O $HTTPHOST$SCRIPT<enter><wait>",
                "sh $SCRIPT<enter><wait>"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "arch-aegir.box"
        }
    ]
}
